@model BRO.Domain.Command.ApplicationUser.EditApplicationUserCommand

<div class="row align-items-center mb-5 mt-5">
    <div class="col-1  col-sm-6">
    </div>
    <div class="col-11 col-sm-6  text-end">
        <h3 class="text-secondary m-0 ">Zmiana danych osobowych</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <partial name="_AccountPartial" />
    </div>
    <div class="col-md-7 offset-md-2">
        <div class="row">
            <div class="col-md-8  offset-md-2">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger val mt-3 mb-2 ms-0 p-0"></div>
                    <input asp-for="Id" readonly hidden />
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control my-2" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control my-2" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control my-2" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostalCode"></label>
                        <input asp-for="PostalCode" class="form-control my-2" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Street"></label>
                        <input asp-for="Street" class="form-control my-2" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control my-2" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-warning m-3">Zatwierdź zmiany</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<partial name="_ActionPerformedResultPartial" />

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ActionPerformedResultScriptsPartial" />
}