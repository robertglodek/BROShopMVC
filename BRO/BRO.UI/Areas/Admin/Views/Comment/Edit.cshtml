@model BRO.Domain.Command.Comment.EditCommentCommand


@{
    ViewData["Title"] = "Edytuj komentarz";
}




<form method="post" enctype="multipart/form-data" class="mt-5">
    <div asp-validation-summary="ModelOnly" class="text-danger val  mb-2 ms-0 p-0"></div>
    <input asp-for="@Model.Id" readonly hidden />
    <input asp-for="@Model.ProductId" readonly hidden />
    <input asp-for="@Model.UserId" readonly hidden />
    <input asp-for="@Model.PublishDateTime" readonly hidden />

    <div class="row p-3 border">
        <div class="col-12  ">
            <h2 class="text-secondary">@ViewData["Title"]</h2>
        </div>
        <div class="col-12 col-md-8 pt-4">
            <div class="form-group row align-items-center text-secondary">
                <div class="col-sm-4 col-12">
                    <label asp-for="@Model.Content"></label>
                </div>
                <div class="col-sm-8 col-12">
                    <textarea asp-for="@Model.Content" class="form-control" readonly></textarea>
                </div>
            </div>
            <div class="form-group row align-items-center text-secondary mt-3">
                <div class="col-sm-4 col-12">
                    <label>Data publikacji</label>
                </div>
                <div class="col-sm-8 col-12">
                    <input value="@Model.PublishDateTime.ToLocalTime().ToString("MM/dd/yyyy")" class="form-control" readonly />
                    </span>
                </div>
            </div>
            <div class="form-group row align-items-center text-secondary mt-3">
                <div class="col-sm-4 col-12">
                    <label asp-for="@Model.CommentResponse"></label>
                </div>
                <div class="col-sm-8 col-12">
                    <textarea asp-for="@Model.CommentResponse" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row align-items-center text-secondary mt-3">
                <div class="col-4">
                    <label asp-for="@Model.Allowed"></label>
                </div>
                <div class="col-8 text-center">
                    <input type="checkbox" asp-for="@Model.Allowed" class="form-check-input" />

                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12 col-md-8 offset-md-4">
                    <div class="row">
                        <div class=" col-12 col-md-6 ">
                            <button type="submit" class="btn btn-outline-warning form-control">Edytuj</button>
                        </div>
                        <div class="col-12 col-md-6 mt-1 mt-md-0">
                            <a asp-action="Index" class="btn btn-outline-secondary form-control">Powrót</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>